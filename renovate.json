{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:weekly"
    ]
  },
  "nix": {
    "enabled": true
  },
  "pep621": {
    "enabled": false
  },
  "pip_requirements": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchCategories": [
        "python"
      ],
      "enabled": false
    }
  ]
}
